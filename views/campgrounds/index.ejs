            <p><%= campground.workout_date.toLocaleString('en-GB', { timeZone: 'UTC' }); %></p>
          </div>
          <div class="col-6">
            <p><%= campground.name %></p>
          </div>
          <div class="col-1 edit">
               <i class="fas fa-ellipsis-v"></i>
          </div>
        </div>
        </a>
        <% }); %>
